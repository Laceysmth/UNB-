folderNames = {'20151019', '20151020', '20151021', '20151022', '20151023', '20151024', '20151025','20151026', '20151027', '20151028', '20151029', '20151030', '20151031', '20151101', '20151102', '20151103', '20151104', '20151105', '20151106', '20151107', '20151108', '20151109', '20151110', '20151111', '20151112', '20151113', '20151114', '20151115', '20151116', '20151117', '20151118', '20151119', '20151120', '20151121', '20151122', '20151123', '20151124', '20151125', '20151126', '20151127', '20151128', '20151129', '20151130', '20151201', '20151202', '20151203', '20151204', '20151205', '20151205', '20151207', '20151208', '20151209', '20151210', '20151211', '20151212', '20151213', '20151214', '20151215', '20151216', '20151217', '20151218', '20151219', '20151220', '20151221', '20151222', '20151223', '20151224', '20151225', '20151226', '20151227', '20151228', '20151229', '20151230','20151231',  '20160101', '20160102', '20160103', '20160104', '20160105', '20160106', '20160107', '20160108', '20160109', '20160110', '20160111', '20160112', '20160113', '20160114', '20160115', '20160116', '20160117', '20160118', '20160119', '20160120', '20160121', '20160122', '20160123', '20160124', '20160125', '20160126', '20160127', '20160128', '20160129', '20160130', '20160131', '20160201', '20160202', '20160203', '20160204', '20160205', '20160206', '20160207', '20160208', '20160209', '20160210', '20160211', '20160212', '20160213', '20160214', '20160215', '20160216', '20160217', '20160218', '20160219', '20160210', '20160211', '20160212', '20160213', '20160214', '20160215', '20160216', '20160217', '20160218', '20160219', '20160220', '20160221', '20160222', '20160223', '20160224', '20160225', '20160226', '20160227', '20160228', '20160229', '20160301', '20160302', '20160303', '20160304', '20160305', '20160306', '20160307', '20160308', '20160309', '20160310', '20160311', '20160312', '20160313', '20160314', '20160315', '20160316', '20160317', '20160318'}
outputDirectory = 'C:\Users\MRI_Right\Desktop\Lacey\Image Movies'; % Replace with the desired output directory

for i = 1:length(folderNames)
    currentFolder = folderNames{i};
   
   
    % List of image files in the current folder
    imageFiles = dir(fullfile(currentFolder, '*.png'));
   
    % VideoWriter object for the movie
    movieName = sprintf('%s_movie.mp4', currentFolder);
    fullMoviePath = fullfile(outputDirectory, movieName); % Full path to save the movie
    videoObj = VideoWriter(fullMoviePath, 'MPEG-4');
    open(videoObj);
   
    % Loop through image files and add frames to the movie
    for j = 1:length(imageFiles)
        imageName = fullfile(currentFolder, imageFiles(j).name);
        img = imread(imageName);
        img = im2double(img);
        writeVideo(videoObj, img);
    end
   
    close(videoObj);
end
